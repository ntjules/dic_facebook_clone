<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>content</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td> <%= image_tag post.image.url unless post.image.nil?%></td>
      <td>
        <div class="panel-group" id="accordion">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#<%= "link".concat( post.id.to_s) %>">
                  View comments <span><%= post.comments.count%></span>
                </a>
              </h4>
              <%= render partial: 'comments/form', :locals => {:comment => Comment.new, :id =>post.id} %>

            </div>
            <div id="<%= "link".concat( post.id.to_s) %>" class="panel-collapse collapse">
              <div class="panel-body">
                <%= render partial: 'comment', collection: post.comments.reverse.last(2) %>

                ### The comment form comes here ###<br />
                ### render :partial => 'comment/form'
              </div>
            </div>
          </div>
        </div>

      </td>
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

